---
interface Props {
	title: string;
    description: string;
    href: string,
    backgroundImage: string;

    side: string;
}

const { title, description, href, backgroundImage, side } = Astro.props;
---


<div class="container-fluid client">
    <div class="row client-container" style=`background-image: url(${backgroundImage});`>
        <div class="col-12 client-overlay">
            <div style=`margin-left: ${side == "right" ? "auto" : "0" };` class="text-container">
                <h1 class="pb-1" style="color: white;">{title}</h1>
                <p style="color: white" class="mb-4 mt-3">{description}</p>
                <a href=`${href}` target="_blank">
                    <button>
                        Ver m&aacute;s <i class="bi bi-arrow-right"></i>
                    </button>
                </a>
            </div>
        </div>
    </div>
</div>

<style >
    .client-container{
        border-radius: 20px;
        overflow: hidden;
        background-position: 0% 0%, 50% calc(50% -(((var(--scroll-y, 0)* 1px) - calc(var(--element-top, 0)* 1px))* 0.625));
        background-repeat: repeat, repeat;
        background-size: auto, cover;
    }
    
    h1{
        font-size: 3.3em;
        font-weight: bolder;
    }
    .client-overlay {
        padding: 70px;
        background-color: rgba(0, 0, 0, 0.5);
    }

    .client button {
        background-color: white;
        border-radius: 18px;
        padding: 15px 30px;
        font-weight: 600;
        outline: none;
        border: none;
        transition-duration: .2s;
    }

    .client button:hover {
        background-color: #d6d6d6;
    }

    .client .text-container{
        width: 100%;
        max-width: 500px;
        backdrop-filter: blur(5px);
        background-color: rgba(255, 255, 255, 0.2);
        border-radius: 32px;
        padding: 35px 40px;
    }

    @media screen and (max-width: 500px) {
        h1{
            font-size: 2.5em;
        }
        .client-overlay {
            padding: 40px;
        }
        .client .text-container{ 
            padding: 25px 30px;
        }
    }

    @media screen and (max-width: 370px) {
        h1{
            font-size: 2em;
        }
        .client-overlay {
            padding: 30px;
        }
        .client .text-container{ 
            padding: 20px 25px;
        }
    }
</style>